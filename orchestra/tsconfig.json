{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["../smartsample-nextjs/src/components/*"],
      "@/app/*": ["../smartsample-nextjs/src/app/*"],
      "@/lib/*": ["../smartsample-nextjs/src/lib/*"],
      "@/store/*": ["../smartsample-nextjs/src/store/*"],
      "@/types/*": ["../smartsample-nextjs/src/types/*"]
    }
  },
  "include": [
    "stories/**/*",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
